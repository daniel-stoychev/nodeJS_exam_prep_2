
        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Blog</h1>
                <form method="POST">
                    <label>Title:</label>
                    <input name="title" type="text" id="name" value="{{selectedBlog.title}}">

                    <label>Image:</label>
                    <input name="imageUrl" type="text" id="image" value="{{selectedBlog.imageUrl}}">

                    <label>Content:</label>
                    <textarea id="content"
                        name="content">{{selectedBlog.content}}</textarea>

                    <label>Blog Category:</label>
                    <input name="category" type="text" id="category" value="{{selectedBlog.category}}">

                    <input type="submit" id="btn" value="EDIT">
                </form>
            </div>
        </section>
    