<div class="details-container">
    <div class="details-container-image">
        <img src={{selectedBlog.imageUrl}}>
    </div>
    <div class="details-container-info">
        <h2>{{selectedBlog.title}}</h2>
        <h3>{{selectedBlog.category}}</h3>
        <h3>By: {{selectedBlog.owner.username}}</h3>
        <!--If there are followers-->
        <h4>Follow By: jace.m, sandra.p</h4>
        <!--If there are no followers-->
        <h4>There are no followers yet!</h4>
    </div>
    <div class="details-container-content">
        <p>{{selectedBlog.content}}</p>
    </div>
    <div class="btn-container">
        <!-- Only for registered user and creator of the blog post-->
        {{#if isOwner}}
        <a href="/blogs/{{selectedBlog._id}}/edit">Edit</a>
        <a href="/blogs/{{selectedBlog._id}}/delete">Delete</a>
        {{else}}
        <!-- logged in user who has not yet followed the blog-->
        <a href="/blog/{{selectedBlog._id}}/follow">Follow</a>
        
        <!-- logged in user who has already followed the blog-->
        <p class="follow-pub">You already follow this blog!</p>
        {{/if}}

    </div>
</div>