
        <div class="container">
            <div class="blog-message">
                <h1 id="site-title">Blog</h1>
                <h2 id="site-mid-title">Create your own world!</h2>
            </div>

            <div class="last-blogs">
                {{#if isNoPosts}}
                    <article class="not-available-blogs">
                    <h1>No blogs created yet.</h1>
                    {{else}}
                    {{#each lastThree}}
                        <div class="info">
                            <h2 class="title">{{title}}</h2>
                            <h4 class="genre">{{category}}</h4>
                            <div class="see-more">
                                <a href="/blogs/{{_id}}">See More...</a>
                            </div>
                        </div>
                    {{/each}}
                {{/if}}

                
            </div>



        </div>
    